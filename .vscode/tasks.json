{
	"version": "2.0.0",
	"tasks": [
		// ===== BUILD TASKS =====
		{
			"label": "Build: Debug",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"build\\generators\\conanbuild.bat && cmake --build build --config Debug"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"focus": false,
				"clear": false
			}
		},
		{
			"label": "Build: Release",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"build\\generators\\conanbuild.bat && cmake --build build --config Release"
			],
			"group": "build",
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"focus": false,
				"clear": false
			}
		},
		// ===== REBUILD TASKS =====
		{
			"label": "Rebuild: Debug",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"build\\generators\\conanbuild.bat && cmake --build build --config Debug --clean-first"
			],
			"group": "build",
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"focus": false,
				"clear": true
			}
		},
		{
			"label": "Rebuild: Release",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"build\\generators\\conanbuild.bat && cmake --build build --config Release --clean-first"
			],
			"group": "build",
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"focus": false,
				"clear": true
			}
		},
		// ===== CLEAN TASKS =====
		{
			"label": "Clean: All Configurations",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"cmake --build build --target clean"
			],
			"group": "build",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"focus": false,
				"clear": false
			}
		},
		{
			"label": "Clean and Reconfigure",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"if exist build rmdir /s /q build && configure.bat"
			],
			"group": "build",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"focus": true,
				"clear": true
			}
		},
		// ===== FRONTEND TASKS =====
		{
			"label": "Build: Frontend",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"npm install && npm run build"
			],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"group": "build",
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"focus": false
			}
		},
		{
			"label": "Rebuild: Frontend",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"if exist dist rmdir /s /q dist && npm run build"
			],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"group": "build",
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"focus": false,
				"clear": true
			}
		},
		// ===== SPECIAL TASKS =====
		{
			"label": "Reconfigure CMake",
			"type": "shell",
			"command": "cmake",
			"args": [
				"build"
			],
			"group": "build",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"focus": false,
				"clear": true
			}
		}
	]
}
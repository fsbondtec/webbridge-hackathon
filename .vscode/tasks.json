{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Debug",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"build\\generators\\conanbuild.bat && cmake --build build --config Debug"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"focus": false,
				"clear": false
			}
		},
		{
			"label": "Build Release",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"build\\generators\\conanbuild.bat && cmake --build build --config Release"
			],
			"group": "build",
			"problemMatcher": "$msCompile",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"focus": false,
				"clear": false
			}
		},
		{
			"label": "Clean and Configure",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"if exist build rmdir /s /q build && configure.bat"
			],
			"group": "build",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"focus": true,
				"clear": true
			}
		},
		{
			"label": "Build Frontend",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"npm install && npm run build"
			],
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"group": "build",
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"focus": false
			}
		},
		{
			"label": "Full Rebuild",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Clean and Configure",
				"Build Debug"
			],
			"group": "build",
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"focus": true,
				"clear": true
			}
		}
	]
}